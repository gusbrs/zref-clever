  {
    % First attempt: general options.
    \prop_get:NnNF \l_@@_ref_options_prop {#1} #2
      {
        % If not found, try type specific options.
        \bool_lazy_all:nTF
          {
            { ! \tl_if_empty_p:N \l_@@_label_type_a_tl }
            {
              \prop_if_exist_p:c
                {
                  l_@@_type_
                  \l_@@_label_type_a_tl _options_prop
