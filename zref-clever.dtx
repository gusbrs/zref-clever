          {
            \prop_get:cnN
              {
                l_@@_type_
                \l_@@_label_type_a_tl _options_prop
              }
              {#1} #2
          }
          {
            % If not found, try type specific translations.
            \@@_get_type_transl:xxnNF
              { \l_@@_ref_language_tl }
              { \l_@@_label_type_a_tl }
              {#1} #2
