%     \cs{@@_provide_dictionary_verbose:n} \Arg{language}
%   \end{syntax}
%    \begin{macrocode}
\cs_new_protected:Npn \@@_provide_dictionary_verbose:n #1
  {
    \group_begin:
    \bool_set_true:N \l_@@_load_dict_verbose_bool
